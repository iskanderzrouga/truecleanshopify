{% comment %}
  Renders product variant options - Minimalist design with price breakdowns

  Accepts:
  - product: {Object} product object.
  - option: {Object} current product_option object.
  - block: {Object} block object.
  - picker_type: {String} type of picker to display
{% endcomment %}
{%- liquid
  assign product_form_id = 'product-form-' | append: section.id
-%}

{%- for value in option.values -%}
  {%- liquid
    assign swatch_focal_point = null
    if value.swatch.image
      assign image_url = value.swatch.image | image_url: width: 50
      assign swatch_value = 'url(' | append: image_url | append: ')'
      assign swatch_focal_point = value.swatch.image.presentation.focal_point
    elsif value.swatch.color
      assign swatch_value = 'rgb(' | append: value.swatch.color.rgb | append: ')'
    else
      assign swatch_value = null
    endif

    assign option_disabled = true
    if value.available
      assign option_disabled = false
    endif
  -%}

  {%- capture input_id -%}
    {{ section.id }}-{{ option.position }}-{{ forloop.index0 -}}
  {%- endcapture -%}

  {%- capture input_name -%}
    {{ option.name }}-{{ option.position }}
  {%- endcapture -%}

  {%- capture input_dataset -%}
    data-product-url="{{ value.product_url }}"
    data-option-value-id="{{ value.id }}"
  {%- endcapture -%}

  {%- capture label_unavailable -%}
    <span class="visually-hidden label-unavailable">
      {{- 'products.product.variant_sold_out_or_unavailable' | t -}}
    </span>
  {%- endcapture -%}

  <div class="flex flex-col justify-end product-variant--{{forloop.index}}">
    <input
      type="radio"
      class="new-lp-variant--inut-sub"
      id="{{ input_id }}"
      name="{{ input_name | escape }}"
      value="{{ value | escape }}"
      form="{{ product_form_id }}"
      {% if value.selected %}
        checked
      {% endif %}
      {% if option_disabled %}
        class="disabled"
      {% endif %}
      {{ input_dataset }}
    >
    {% assign forloop_index = forloop.index | times: 2 | minus: 1 %}
    {% assign variant = product.variants[forloop_index] %}

    {% assign sub_percent = variant.metafields.custom.subscription_discount | plus: 0 | divided_by: 100.000 %}
    {% assign inverted_percent = 1 | minus: sub_percent %}

    {% assign variant_count = variant.metafields.custom.count | default: 1 %}
    {% assign price = variant.price %}
    {% assign price_sub = variant.price | times: inverted_percent %}
    {% assign compare_price = variant.compare_at_price %}

    {%- comment -%} Calculate per toilet per month (3 months supply) {%- endcomment -%}
    {% assign price_per_toilet = price | divided_by: variant_count %}
    {% assign price_per_toilet_sub = price_sub | divided_by: variant_count %}
    {% assign price_per_toilet_per_month = price_per_toilet | divided_by: 3 %}
    {% assign price_per_toilet_per_month_sub = price_per_toilet_sub | divided_by: 3 %}
    {% assign price_per_toilet_per_day = price_per_toilet | divided_by: 90 %}
    {% assign price_per_toilet_per_day_sub = price_per_toilet_sub | divided_by: 90 %}

    <label for="{{ input_id }}" {% if variant.metafields.custom.subscription_id != blank %} data-subscription-id="{{ variant.metafields.custom.subscription_id }}" {% endif %} class="new-lp-variant--label-sub !p-0 !bg-transparent !rounded-[16px] !border-none !m-0">
      <div {% if variant.metafields.custom.subscription_id != blank %} data-subscription-id="{{ variant.metafields.custom.subscription_id }}" {% endif %} class="new-lp-variant-content flex items-center justify-between gap-2 border-2 border-[#E0E0E0] bg-white rounded-[12px] relative p-3 md:p-4 transition-all duration-200 hover:border-[#00B7A2]">

        {%- comment -%} Radio + Toilet Count {%- endcomment -%}
        <div class="flex items-center gap-3">
          <div class="new-lp-variant-radio w-6 h-6 min-w-6 border-[2px] border-[#ccc] rounded-full group-[.active]:border-[#00B7A2] !flex items-center justify-center">
            <div class="new-lp-variant-radio__circle w-3 h-3 min-w-3 rounded-full bg-[#00B7A2] hidden group-[.active]:!block"></div>
          </div>

          <div class="flex flex-col">
            <div class="text-[18px] md:text-[20px] font-bold text-[#001C19] leading-tight">
              {{ value }}{{ label_unavailable }}
            </div>
            <div class="flex items-center gap-2 mt-1">
              <span class="text-white font-semibold text-[10px] md:text-[11px] bg-[#00B7A2] leading-tight px-2 py-0.5 rounded-[4px] uppercase tracking-wide">
                3 Months Supply
              </span>
            </div>
          </div>
        </div>

        {%- comment -%} Price Breakdown {%- endcomment -%}
        <div class="flex flex-col items-end gap-0.5">
          {%- comment -%} Per toilet per month {%- endcomment -%}
          <div class="text-[12px] md:text-[13px] text-[#666]">
            <span class="onetimecard-element">
              {{ price_per_toilet_per_month | money }}/toilet/mo
            </span>
            <span class="subscription-element">
              {{ price_per_toilet_per_month_sub | money }}/toilet/mo
            </span>
          </div>

          {%- comment -%} Main Price {%- endcomment -%}
          <div class="flex items-center gap-2">
            <div class="text-[22px] md:text-[26px] font-bold text-[#001C19] leading-none">
              <span class="onetimecard-element">
                {{- price | money_without_trailing_zeros -}}
              </span>
              <span class="subscription-element">
                {{- price_sub | money_without_trailing_zeros -}}
              </span>
            </div>
            {% if compare_price > price %}
              <div class="text-[14px] md:text-[16px] text-[#999] line-through">
                {{ compare_price | money_without_trailing_zeros }}
              </div>
            {% endif %}
          </div>

          {%- comment -%} Savings Badge {%- endcomment -%}
          {% if compare_price > price %}
            {% assign discount = compare_price | minus: price %}
            {% assign discount_sub = compare_price | minus: price_sub %}
            <div class="text-[11px] md:text-[12px] font-bold text-[#00873C] bg-[#E8FFE8] px-2 py-0.5 rounded-[4px]">
              <span class="onetimecard-element">
                Save {{ discount | money_without_trailing_zeros }}
              </span>
              <span class="subscription-element">
                Save {{ discount_sub | money_without_trailing_zeros }}
              </span>
            </div>
          {% endif %}
        </div>

      </div>
    </label>
  </div>
{%- endfor -%}
