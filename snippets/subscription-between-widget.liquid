<div class="flex flex-col w-full max-w-[380px] mx-auto">

  <div class="bg-white rounded-xl p-8 shadow-sm border border-[#eee]">

    <!-- Badge -->
    <div class="text-center mb-8">
      <span class="bg-[#00B7A2] text-white text-xs font-bold uppercase tracking-widest px-4 py-1.5 rounded-full">
        3 Month Supply
      </span>
    </div>

    <!-- How Many Toilets -->
    <div class="text-center mb-8">
      <p class="text-[15px] text-[#888] mb-4">How many toilets?</p>
      <div class="flex items-center justify-center gap-6">
        <button type="button" class="toilet-minus w-14 h-14 rounded-full border-2 border-[#00B7A2] text-[#00B7A2] text-3xl font-light flex items-center justify-center hover:bg-[#00B7A2] hover:text-white transition-colors cursor-pointer bg-transparent">âˆ’</button>
        <span class="toilet-qty-display text-[56px] font-bold text-[#001C19] w-20 text-center leading-none">2</span>
        <button type="button" class="toilet-plus w-14 h-14 rounded-full border-2 border-[#00B7A2] text-[#00B7A2] text-3xl font-light flex items-center justify-center hover:bg-[#00B7A2] hover:text-white transition-colors cursor-pointer bg-transparent">+</button>
      </div>
    </div>

    <!-- Price -->
    <div class="text-center">
      <div class="toilet-price-total text-[48px] font-bold text-[#001C19] leading-none">$69</div>
      <div class="text-[18px] text-[#666] mt-1">every 3 months</div>

      <div class="mt-6 pt-6 border-t border-[#eee]">
        <div class="toilet-price-breakdown text-[20px] font-semibold text-[#001C19]">$11.50 per toilet / month</div>
        <div class="toilet-price-savings text-[16px] text-[#00B7A2] font-semibold mt-2">You save $29</div>
      </div>
    </div>

  </div>

</div>

<style>
  #productsVariants variant-selects + variant-selects {
    display: none !important;
  }
  #productsVariants .product-form__input--pill {
    display: none !important;
  }
  .toilet-minus, .toilet-plus {
    outline: none;
    -webkit-appearance: none;
  }
</style>

<script>
(function() {
  const priceData = {
    1: { price: 39, compare: 49, perMonth: 13.00 },
    2: { price: 69, compare: 98, perMonth: 11.50 },
    3: { price: 99, compare: 147, perMonth: 11.00 },
    4: { price: 119, compare: 196, perMonth: 9.92 }
  };

  let qty = 2;

  const qtyEl = document.querySelector('.toilet-qty-display');
  const priceEl = document.querySelector('.toilet-price-total');
  const breakdownEl = document.querySelector('.toilet-price-breakdown');
  const savingsEl = document.querySelector('.toilet-price-savings');

  function update() {
    const d = priceData[qty];
    qtyEl.textContent = qty;
    priceEl.textContent = '$' + d.price;
    breakdownEl.textContent = '$' + d.perMonth.toFixed(2) + ' per toilet / month';
    savingsEl.textContent = 'You save $' + (d.compare - d.price);

    const inputs = document.querySelectorAll('.new-lp-variant--inut-sub');
    if (inputs[qty - 1]) {
      inputs[qty - 1].checked = true;
      inputs[qty - 1].dispatchEvent(new Event('change', { bubbles: true }));
    }
  }

  document.querySelector('.toilet-minus')?.addEventListener('click', () => { if (qty > 1) { qty--; update(); } });
  document.querySelector('.toilet-plus')?.addEventListener('click', () => { if (qty < 4) { qty++; update(); } });

  update();
})();
</script>
