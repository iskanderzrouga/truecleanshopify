<div class="text-center py-4">

  <p class="text-sm text-[#888] mb-6">How many toilets?</p>

  <div class="flex items-center justify-center gap-8 mb-8">
    <button type="button" class="toilet-minus w-12 h-12 rounded-full border border-[#ddd] text-[#001C19] text-2xl hover:border-[#00B7A2] hover:text-[#00B7A2] transition-colors cursor-pointer bg-transparent">âˆ’</button>
    <span class="toilet-qty-display text-6xl font-bold text-[#001C19]">2</span>
    <button type="button" class="toilet-plus w-12 h-12 rounded-full border border-[#ddd] text-[#001C19] text-2xl hover:border-[#00B7A2] hover:text-[#00B7A2] transition-colors cursor-pointer bg-transparent">+</button>
  </div>

  <div class="toilet-price-total text-4xl font-bold text-[#001C19] mb-1">$69</div>
  <div class="text-sm text-[#888]">every 3 months</div>
  <div class="toilet-price-breakdown text-lg font-medium text-[#00B7A2] mt-3">$11.50/toilet/month</div>

</div>

<style>
  #productsVariants variant-selects,
  #productsVariants .product-form__input--pill {
    display: none !important;
  }
  .toilet-minus, .toilet-plus { outline: none; }
</style>

<script>
(function() {
  const prices = { 1: [39,13], 2: [69,11.50], 3: [99,11], 4: [119,9.92] };
  let q = 2;
  const qEl = document.querySelector('.toilet-qty-display');
  const pEl = document.querySelector('.toilet-price-total');
  const bEl = document.querySelector('.toilet-price-breakdown');

  function u() {
    qEl.textContent = q;
    pEl.textContent = '$' + prices[q][0];
    bEl.textContent = '$' + prices[q][1].toFixed(2) + '/toilet/month';
    const inputs = document.querySelectorAll('.new-lp-variant--inut-sub');
    if (inputs[q-1]) { inputs[q-1].checked = true; inputs[q-1].dispatchEvent(new Event('change', {bubbles:true})); }
  }

  document.querySelector('.toilet-minus')?.addEventListener('click', () => { if(q>1){q--;u();} });
  document.querySelector('.toilet-plus')?.addEventListener('click', () => { if(q<4){q++;u();} });
  u();
})();
</script>
