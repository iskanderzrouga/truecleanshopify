{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .hidden-review {
        display: none;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }

  @media screen and (max-width: 749px) {
    .mobile-hidden-slider {
      display: none;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }};"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-10">
      <div class="flex flex-col items-center justify-center gap-3 md:gap-4">
        {% if section.settings.heading != blank %}
          <h2
            class="text-[28px] md:text-[36px] font-bold !leading-tight text-[#001C19] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        <div class="flex flex-col md:flex-row items-center justify-center gap-2">
          {% if section.settings.image != blank %}
            {{
              section.settings.image
              | image_url: width: 120
              | image_tag: class: 'w-full max-w-[120px]', sizes: '120px'
            }}
          {% endif %}
          {% if section.settings.description != blank %}
            <div
              class="text-[14px] md:text-[17px] font-normal !leading-tight text-[#001C19] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.description_color }};"
            >
              {{ section.settings.description }}
            </div>
          {% endif %}
        </div>
      </div>

      {% if section.blocks.size > 0 %}
        <div class="w-full grid md:grid-cols-4 md:gap-5">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'row' %}
                <div class="tc-reviews__review {% if forloop.index > 12 %} hidden-review {% endif %} h-auto {% if forloop.index == 3 %} max-md:relative {% endif %} {% if forloop.index > 3 %} mobile-hidden-slider {% endif %}">
                  {% if forloop.index == 3 %}
                    <div
                      class="absolute left-0 bottom-0 h-[200px] w-full flex items-end justify-center md:hidden"
                      style="background: linear-gradient(to top, white 0%, transparent 100%);"
                    >
                      <div class="load-more text-base text-[#001C19] font-bold flex items-center justify-center gap-2 border-[#001C19] rounded-[100px] bg-[#E8FF33] px-5 py-2 mb-5">
                        Load More
                        <svg
                          width="19"
                          height="19"
                          viewBox="0 0 19 19"
                          fill="none"
                          xmlns="http://www.w3.org/2000/svg"
                        >
                          <path d="M4.95586 5.14583L9.49805 10.039L14.0402 5.14583L15.4355 6.65224L9.49805 13.0625L3.56055 6.65224L4.95586 5.14583Z" fill="black"/>
                        </svg>
                      </div>
                    </div>
                  {% endif %}
                  <div
                    class="flex flex-col w-full gap-3 p-4 rounded-[10px] h-full"
                    style="background-color: {{ block.settings.bgcolor }};"
                  >
                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 300
                        | image_tag: class: 'w-full rounded-[10px] h-fit object-contain', sizes: '300px'
                      }}
                    {% endif %}

                    <div class="flex-1 flex flex-col gap-4 justify-between">
                      <div class="flex flex-col gap-3">
                        {% if block.settings.heading != blank %}
                          <div
                            class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#001C19]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                            style="color: {{ block.settings.heading_color }};"
                          >
                            {{ block.settings.heading }}
                          </div>
                        {% endif %}

                        {% if block.settings.description != blank %}
                          <div
                            class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[15px] md:text-[15px] {% endif %} font-normal !leading-[1.5] text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                            style="color: {{ block.settings.description_color }};"
                          >
                            {{ block.settings.description }}
                          </div>
                        {% endif %}
                      </div>

                      <div class="flex gap-3 justify-between">
                        <div class="flex flex-col gap-1">
                          {% if block.settings.name != blank %}
                            <div
                              class="text-[14px] md:text-[14px] font-semibold !leading-tight text-[#001C19]"
                              style="color: {{ block.settings.label_color }};"
                            >
                              {{ block.settings.name }}
                            </div>
                          {% endif %}

                          <div class="flex items-center gap-2">
                            {% if block.settings.icon != blank %}
                              {{
                                block.settings.icon
                                | image_url: width: 16
                                | image_tag: class: 'w-full max-w-[16px] h-fit object-contain', sizes: '16px'
                              }}
                            {% endif %}
                            {% if block.settings.verified != blank %}
                              <div
                                class="text-[12px] md:text-[12px] font-normal !leading-tight text-[#001C19]"
                                style="color: {{ block.settings.label_color }};"
                              >
                                {{ block.settings.verified }}
                              </div>
                            {% endif %}
                          </div>
                        </div>
                        {% if block.settings.stars != blank %}
                          {{
                            block.settings.stars
                            | image_url: width: 100
                            | image_tag: class: 'w-full max-w-[100px] h-fit object-contain', sizes: '100px'
                          }}
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto max-md:hidden">
          <div
            href="{{ section.settings.button_url }}"
            class="show-more-reviews new-button--primary cursor-pointer"
          >
            {{ section.settings.button_label }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% comment %}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var splide = new Splide('.section-{{ section.id }}-padding .tc-reviews__slider', {
        perPage: 1,
        perMove: 1,
        rewind: true,
        gap: '15px',
        trimSpace: false,
        pagination: false,
        mediaQuery: 'min',
        arrows: true,
        padding: { right: '0' },
        breakpoints: {
          750: {
            destroy: true,
          },
        },
      });
      splide.mount();
    });
  </script>
{% endcomment %}

<script>
  document.querySelector('.section-{{ section.id }}-padding .show-more-reviews').addEventListener('click', () => {
    document
      .querySelectorAll('.section-{{ section.id }}-padding .tc-reviews__review')
      .forEach((el) => el.classList.remove('hidden-review'));
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const btn = document.querySelector('.section-{{ section.id }}-padding .load-more');
    if (!btn) return;

    btn.addEventListener('click', function () {
      btn.classList.add('hidden');

      document
        .querySelectorAll('.section-{{ section.id }}-padding .tc-reviews__review.mobile-hidden-slider')
        .forEach((card) => card.classList.remove('mobile-hidden-slider'));
    });
  });
</script>

{% comment %}
  <style>
    .section-{{ section.id }}-padding .tc-reviews__slider .splide__arrow {
      background: #01B8A3;
      opacity: 1;
    }
    .section-{{ section.id }}-padding .tc-reviews__slider .splide__arrow svg {
      width: 12px;
      height: 12px;
      fill: #fff;
    }
    .section-{{ section.id }}-padding .tc-reviews__slider .splide__arrow--prev {
      bottom: -60px;
      left: calc(50% - 50px);
      top: auto;
      }
    .section-{{ section.id }}-padding .tc-reviews__slider .splide__arrow--next {
      bottom: -60px;
      top: auto;
      right: calc(50% - 50px);
    }
  </style>
{% endcomment %}

