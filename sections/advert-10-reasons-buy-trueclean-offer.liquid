<section class="beauty-tool-selling-offer {% if section.settings.show_background %} bg-[#EFF6F6] py-10 px-5 md:py-[60px] {% else %} bg-white py-5 px-5 md:py-[30px] {% endif %}">
  <div class="max-w-[1000px] mx-auto w-full">
    <div class="bg-[#ffffff] rounded-[20px]">
      <div>
        <div class="grid grid-cols-1 md:grid-cols-2">
          <div class="">
            {% if section.settings.image != blank %}
              {{
                section.settings.image
                | image_url: width: 500
                | image_tag:
                  class: 'w-full h-full object-cover aspect-[1/1] md:aspect-auto hidden md:block rounded-l-[20px]'
              }}
            {% endif %}
            {% if section.settings.image_mobile != blank %}
              {{
                section.settings.image_mobile
                | image_url: width: 500
                | image_tag:
                  class: 'w-full h-full object-cover aspect-[1/1] md:aspect-auto block md:hidden rounded-t-[20px]'
              }}
            {% endif %}
          </div>

          <div class="p-5 md:p-8 flex flex-col items-center justify-center gap-4 bg-white rounded-b-[20px] md:rounded-b-0 md:rounded-tr-[20px] md:rounded-br-[20px]">
            {% if section.settings.label != blank %}
              <div class="text-[#000] text-[20px] lg:text-[28px] font-black leading-tight md:leading-tight text-center border-dashed border border-[#000000] bg-[#E8FF33] px-6 py-2">
                {{ section.settings.label }}
              </div>
            {% endif %}

            {% if section.settings.heading != blank %}
              <div class="text-[#000] text-[24px] lg:text-[30px] font-black leading-tight md:leading-tight text-center">
                {{ section.settings.heading }}
              </div>
            {% endif %}

            {% if section.settings.text != blank %}
              <div class="listicle-offer__text text-[#000] text-[14px] lg:text-[18px] font-bold leading-tight md:leading-tight text-center">
                {{ section.settings.text }}
              </div>
            {% endif %}

            {% if section.settings.review != blank %}
              <div class="bg-[#F9F9F9] rounded-[12px] p-4 md:p-5 md:flex flex-col gap-4">
                <div class="flex items-center gap-4">
                  {% if section.settings.rev_image != blank %}
                    {{
                      section.settings.rev_image
                      | image_url: width: 50
                      | image_tag: class: 'w-full max-w-[50px] rounded-[50px]'
                    }}
                  {% endif %}

                  <div class="flex-1 flex gap-2 flex-col">
                    <div class="flex items-center gap-1">
                      {% if section.settings.name != blank %}
                        <div class="text-[#262626] text-[12px] md:text-[12px] font-bold !leading-tight mr-3">
                          {{ section.settings.name }}
                        </div>
                      {% endif %}

                      {% if section.settings.rev_icon != blank %}
                        {{ section.settings.rev_icon | image_url: width: 18 | image_tag: class: 'w-full max-w-[18px]' }}
                      {% endif %}

                      {% if section.settings.verified != blank %}
                        <div class="text-[#262626] text-[9px] md:text-[9px] font-normal !leading-tight">
                          {{ section.settings.verified }}
                        </div>
                      {% endif %}
                    </div>

                    {% if section.settings.stars != blank %}
                      {{ section.settings.stars | image_url: width: 80 | image_tag: class: 'w-full max-w-[80px]' }}
                    {% endif %}
                  </div>
                </div>

                {% if section.settings.review != blank %}
                  <div class="text-[#262626] text-[12px] md:text-[12px] font-normal !leading-[1.5] italic">
                    {{ section.settings.review }}
                  </div>
                {% endif %}
              </div>
            {% endif %}

            {% if section.settings.note_text != blank %}
              <div class="text-[#000] text-[10px] lg:text-[10px] bg-[#FEF7F7] font-semibold leading-tight md:leading-tight px-[14px] py-2 border border-[#FF8484] rounded-[10px]">
                <strong>Note ({{ 'now' | date: '%b %e, %Y' }}):</strong> {{ section.settings.note_text }}
              </div>
            {% endif %}

            {% if section.settings.button_text != blank %}
              <div class="w-full">
                <a
                  class="new-button--primary !bg-[#299646] !border-[#299646]"
                  href="{{ section.settings.button_url }}"
                >
                  <span>{{ section.settings.button_text }}</span>
                </a>
              </div>
            {% endif %}

            {% if section.settings.show_timer %}
              {% if section.settings.subheading != blank %}
                <div class="text-[#000] text-sm font-bold leading-tight md:leading-tight">
                  <div class="flex items-center gap-[5px] justify-center flex-col xs:flex-row">
                    <div class="flex items-center gap-[5px] justify-center">
                      <img
                        src="{{ section.settings.icon | image_url }}"
                        class="w-[18px] md:w-6"
                        width="24"
                        height="24"
                        alt="Sale"
                        loading="lazy"
                      >
                      <span>{{ section.settings.subheading }}</span>
                    </div>
                    <span class="text-[#C30A29] font-bold">
                      <span class="bundle-sale-countdown-hours">00</span>
                      <span>:</span>
                      <span class="bundle-sale-countdown-minutes">00</span>
                      <span>:</span>
                      <span class="bundle-sale-countdown-seconds">00</span>
                    </span>
                  </div>
                </div>
              {% endif %}
            {% endif %}

            <div class="grid grid-cols-2 gap-2">
              {% for block in section.blocks %}
                {% if block.type == 'feature_3' %}
                  <div class="flex items-center gap-[7px] justify-center text-center bg-[#EFEAF3] rounded-[5px] px-1 md:px-4 py-2 md:py-3">
                    <span class="text-[#000] text-[12px] lg:text-[14px] font-normal leading-tight md:leading-tight text-center">
                      {{ block.settings.text | highlight: block.settings.highlight }}
                    </span>
                  </div>
                {% endif %}
              {% endfor %}
            </div>

            {% if section.settings.sub_text != blank %}
              <div class="text-[#000] text-[14px] font-medium leading-tight md:leading-tight text-center mt-4">
                {{ section.settings.sub_text }}
              </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .beauty-tool-selling-offer .highlight {
    color: #c30a29;
  }
</style>

{% schema %}
{
  "name": "Adv 10 reasons Offer",
  "settings": [
    {
      "type": "product",
      "id": "product_id",
      "label": "Select a product"
    },
    {
      "type": "text",
      "id": "label",
      "label": "Label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Exclusive Offer"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub Heading",
      "default": "One-Time Offer Ends In"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "rev_image",
      "label": "Review Image"
    },
    {
      "type": "image_picker",
      "id": "stars",
      "label": "Stars"
    },
    {
      "type": "image_picker",
      "id": "rev_icon",
      "label": "Review Icon"
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name"
    },
    {
      "type": "text",
      "id": "verified",
      "label": "Verified"
    },
    {
      "type": "text",
      "id": "review",
      "label": "Review"
    },
    {
      "type": "text",
      "id": "note_text",
      "label": "Note Text",
      "default": "Because of high demand, we regret to inform you that once our current stock runs out — we can’t maintain this special discount offer."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Redeem up to 50% OFF"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "richtext",
      "id": "sub_text",
      "label": "Sub Text"
    },
    {
      "type": "checkbox",
      "id": "show_background",
      "label": "Show Background",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_timer",
      "label": "Show Timer",
      "default": true
    }
  ],
  "blocks": [
    {
      "name": "Feature 1",
      "type": "feature_1",
      "settings": [
        {
          "id": "icon",
          "type": "image_picker",
          "label": "Icon"
        },
        {
          "id": "text",
          "type": "text",
          "label": "Text",
          "default": "Text"
        }
      ]
    },
    {
      "name": "Feature 2",
      "type": "feature_2",
      "settings": [
        {
          "id": "icon",
          "type": "image_picker",
          "label": "Icon"
        },
        {
          "id": "text",
          "type": "text",
          "label": "Text",
          "default": "Text"
        }
      ]
    },
    {
      "name": "Feature 3",
      "type": "feature_3",
      "settings": [
        {
          "id": "text",
          "type": "richtext",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "highlight",
          "label": "Highlight"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Adv 10 reasons Offer"
    }
  ]
}
{% endschema %}
