{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-4"
  style="background-color: {{ section.settings.bgcolor }};"
>
  <div class="mx-auto w-full" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      {% if section.settings.heading != blank %}
        <h2
          class="text-[26px] md:text-[40px] font-bold !leading-tight text-[#000] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.heading_color }};"
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="text-[17px] md:text-[20px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.description_color }};"
        >
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% assign max_width = section.settings.max_width %}
      {% comment %} {% assign max_width = section.settings.max_width |  divided_by: 2 %} {% endcomment %}
      {% assign max_width_px = max_width | append: 'px' %}
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: max_width
          | image_tag: class: 'w-full section-main-image', sizes: max_width_px
        }}
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="w-full grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-8">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'product' %}
                <div class="flex flex-col items-center justify-center gap-[15px] md:gap-5 w-full">
                  {% if block.settings.image != blank %}
                    {{ block.settings.image | image_url: width: 500 | image_tag: class: 'w-full', sizes: '500px' }}
                  {% endif %}

                  {% if block.settings.heading != blank %}
                    <div
                      class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#000]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                      style="color: {{ block.settings.heading_color }};"
                    >
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}

                  {% if block.settings.description != blank %}
                    <div
                      class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[17px] md:text-[20px] {% endif %} font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                      style="color: {{ block.settings.description_color }};"
                    >
                      {{ block.settings.description }}
                    </div>
                  {% endif %}

                  <div class="flex items-center gap-2">
                    {% if block.settings.stars != blank %}
                      {{ block.settings.stars | image_url: width: 110 | image_tag: class: 'w-full', sizes: '110px' }}
                    {% endif %}
                    {% if block.settings.label != blank %}
                      <div
                        class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#000]  {% if block.settings.label_m_center %} max-md:text-center {% endif %} {% if block.settings.label_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.label_color }};"
                      >
                        {{ block.settings.label }}
                      </div>
                    {% endif %}
                  </div>

                  {% if block.settings.button_label != blank %}
                    <div class="w-full">
                      <a
                        href="{{ block.settings.button_url }}"
                        class="new-button--primary"
                      >
                        {{ block.settings.button_label }}
                      </a>
                      {% if block.settings.btn_bottom_text != blank %}
                        <div
                          class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                          style="color: {{ block.settings.btn_bottom_text_color }};"
                        >
                          {{ block.settings.btn_bottom_text }}
                        </div>
                      {% endif %}
                    </div>
                  {% endif %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {% comment %} {%- render 'icon-arrow-right' -%} {% endcomment %}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="text-[14px] md:text-[16px] font-normal !leading-tight text-[#000] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

