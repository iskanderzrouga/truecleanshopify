            <div
              class="tc-introduce w-full grid md:grid-cols-2 border border-[#D5D5D5] rounded-[10px] md:rounded-[25px] px-3 md:px-6 py-4 md:py-7 gap-5"
              style=""
            >
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'row3' %}
                    <div class="grid md:grid-cols-5 {% if forloop.last %} max-md:border-t md:border-l max-md:pt-5 md:pl-5 border-[#D5D5D5] {% endif %}">
                      {% if block.settings.image != blank %}
