</div>

{% comment %}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var splide = new Splide('.section-{{ section.id }}-padding .tc-introduce__slider', {
        perPage: 1,
        perMove: 1,
        rewind: true,
        gap: '15px',
        trimSpace: false,
        pagination: false,
        mediaQuery: 'min',
        arrows: true,
        padding: { right: '0' },
        breakpoints: {
          750: {
            destroy: true,
          },
        },
      });
      splide.mount();
    });
  </script>

  <style>
    .section-{{ section.id }}-padding .tc-introduce__slider .splide__arrow {
      background: #E8FF33;
      opacity: 1;
    }
    .section-{{ section.id }}-padding .tc-introduce__slider .splide__arrow svg {
      width: 12px;
      height: 12px;
      fill: #000;
    }
    .section-{{ section.id }}-padding .tc-introduce__slider .splide__arrow--prev {
      bottom: -60px;
      left: calc(50% - 50px);
      top: auto;
      }
    .section-{{ section.id }}-padding .tc-introduce__slider .splide__arrow--next {
      bottom: -60px;
      top: auto;
      right: calc(50% - 50px);
    }
  </style>
{% endcomment %}

