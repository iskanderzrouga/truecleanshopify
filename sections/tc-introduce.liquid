{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  .section-{{ section.id }}-padding .tc-introduce {
    background: radial-gradient(118.21% 91.82% at -13.77% -40.82%, #E8FF33 0%, #00B7A2 100%);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .tc-introduce {
      background: radial-gradient(26.21% 174.82% at 2.23% -94.82%, #E8FF33 0%, #00B7A2 100%);
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }}; background: linear-gradient(180deg, #00B7A2 0%, #EFF6F6 52.14%);"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-10 md:gap-[60px]">
      <div class="flex flex-col items-center justify-center gap-6 md:gap-10 w-full">
        {% if section.settings.label != blank %}
          <div
            class="max-w-[650px] mx-auto text-[28px] md:text-[36px] font-bold !leading-tight text-[#001C19]  {% if section.settings.label_m_center %} max-md:text-center {% endif %} {% if section.settings.label_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.label_color }};"
          >
            {{ section.settings.label }}
          </div>
        {% endif %}

        {% if section.blocks.size > 0 %}
          <div class="w-full grid md:grid-cols-3 gap-4 md:gap-6">
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'row' %}
                  <div class="splide__slide">
                    <div
                      class="flex flex-col w-full gap-3 p-4 rounded-[10px] h-full"
                      style="background-color: {{ block.settings.bgcolor }};"
                    >
                      {% if block.settings.image != blank %}
                        {{
                          block.settings.image
                          | image_url: width: 300
                          | image_tag: class: 'w-full rounded-[10px] h-fit object-contain', sizes: '300px'
                        }}
                      {% endif %}

                      <div class="flex-1 flex flex-col gap-2 items-center justify-center">
                        {% if block.settings.heading != blank %}
                          <div
                            class="text-[18px] md:text-[20px] font-bold !leading-tight text-[#001C19]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                            style="color: {{ block.settings.heading_color }};"
                          >
                            {{ block.settings.heading }}
                          </div>
                        {% endif %}

                        {% if block.settings.description != blank %}
                          <div
                            class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[16px] md:text-[18px] {% endif %} font-normal !leading-[1.5] text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                            style="color: {{ block.settings.description_color }};"
                          >
                            {{ block.settings.description }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <div class="flex flex-col items-center justify-center gap-2 md:gap-4">
        {% if section.settings.heading != blank %}
          <h2
            class="max-w-[680px] mx-auto text-[28px] md:text-[48px] font-bold !leading-tight text-[#001C19] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[16px] md:text-[20px] font-medium !leading-tight text-[#001C19] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.subheading1 != blank %}
