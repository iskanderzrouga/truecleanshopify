                            >
                              {{ block.settings.heading }}
                            </div>
                          {% endif %}

                          <div class="w-fit flex flex-col gap-1 md:gap-2">
                            {% for i in (1..8) %}
                              {% assign description_name = 'description' | append: i %}
                              {% assign description = block.settings[description_name] %}

                              {% if description != blank %}
                                <div class="flex gap-2 items-center">
                                  {% if icon != blank %}
                                    {{
                                      icon
                                      | image_url: width: 16
                                      | image_tag: class: 'w-full max-w-[16px] h-fit object-contain', sizes: '16px'
                                    }}
                                  {% endif %}
                                  <div
                                    class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[16px] md:text-[17px] {% endif %} font-normal !leading-[1.5] text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                                    style="color: {{ block.settings.description_color }};"
                                  >
                                    {{ description }}
                                  </div>
                                </div>
                              {% endif %}
                            {% endfor %}
                          </div>
                        </div>
                      {% endif %}
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        {% endif %}

        {% if section.settings.text != blank %}
          <div
            class="text-[16px] md:text-[17px] font-medium !leading-tight text-[#001C19]  text-center"
          >
            {{ section.settings.text }}
          </div>
        {% endif %}
      </div>

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto flex flex-col items-center justify-center gap-3">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="text-[13px] md:text-[13px] font-medium !leading-tight text-[#001C19] flex items-center justify-center gap-2 {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
