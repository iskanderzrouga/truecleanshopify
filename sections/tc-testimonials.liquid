{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }

  @media screen and (max-width: 749px) {
    .mobile-hidden-slider {
      display: none;
    }
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }};"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-10 md:px-12">
      <div class="flex flex-col items-center justify-center gap-3 md:gap-4">
        {% if section.settings.heading != blank %}
          <h2
            class="text-[28px] md:text-[36px] font-bold !leading-tight text-[#001C19] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[16px] md:text-[17px] font-normal !leading-tight text-[#001C19] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="splide mb-10 lg:mb-0 tc-testimonials__slider w-full">
          <div class="splide__track">
            <div class="w-full splide__list max-md:!grid max-md:gap-4">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'card' %}
                    <div class="splide__slide tc-testimonials-card h-auto {% if forloop.index == 3 %} max-md:relative {% endif %} {% if forloop.index > 3 %} mobile-hidden-slider {% endif %}">
                      {% if forloop.index == 3 %}
                        <div
                          class="absolute left-0 bottom-0 h-[200px] w-full flex items-end justify-center md:hidden"
                          style="background: linear-gradient(to top, white 0%, transparent 100%);"
                        >
                          <div class="load-more text-base text-[#001C19] font-bold flex items-center justify-center gap-2 border-[#001C19] rounded-[100px] bg-[#E8FF33] px-5 py-2 mb-5">
                            Load More
                            <svg
                              width="19"
                              height="19"
                              viewBox="0 0 19 19"
                              fill="none"
                              xmlns="http://www.w3.org/2000/svg"
                            >
                              <path d="M4.95586 5.14583L9.49805 10.039L14.0402 5.14583L15.4355 6.65224L9.49805 13.0625L3.56055 6.65224L4.95586 5.14583Z" fill="black"/>
                            </svg>
                          </div>
                        </div>
                      {% endif %}
                      <div
                        class="flex flex-col w-full gap-3 p-4 rounded-[10px] h-full"
                        style="background-color: {{ block.settings.bgcolor }};"
                      >
                        {% if block.settings.image != blank %}
                          {{
                            block.settings.image
                            | image_url: width: 300
                            | image_tag: class: 'w-full rounded-[10px] h-fit object-contain', sizes: '300px'
                          }}
                        {% endif %}

                        <div class="flex-1 flex flex-col gap-4 justify-between">
                          {% if block.settings.description != blank %}
                            <div
                              class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[15px] md:text-[15px] {% endif %} font-normal !leading-[1.5] text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                              style="color: {{ block.settings.description_color }};"
                            >
                              {{ block.settings.description }}
                            </div>
                          {% endif %}

                          {% if block.settings.heading != blank %}
                            <div
                              class="border-t border-[#D9DDE0] pt-3 text-[16px] md:text-[16px] font-bold !leading-tight text-[#001C19]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                              style="color: {{ block.settings.heading_color }};"
                            >
                              {{ block.settings.heading }}
                            </div>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto flex flex-col items-center justify-center gap-3">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="text-[13px] md:text-[13px] font-medium !leading-tight text-[#001C19] flex items-center justify-center gap-2 {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {% if section.settings.btn_bottom_icon != blank %}
                {{
                  section.settings.btn_bottom_icon
                  | image_url: width: 16
                  | image_tag: class: 'w-full max-w-[16px] h-fit object-contain', sizes: '16px'
                }}
              {% endif %}
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.section-{{ section.id }}-padding .tc-testimonials__slider', {
      perPage: 3,
      perMove: 1,
      rewind: true,
      gap: '15px',
      trimSpace: false,
      pagination: false,
      arrows: true,
      padding: { right: '0' },
      mediaQuery: 'max',
      breakpoints: {
        750: {
          destroy: true,
        },
      },
    });
    splide.mount();
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const btn = document.querySelector('.section-{{ section.id }}-padding .load-more');
    if (!btn) return;

    btn.addEventListener('click', function () {
      btn.classList.add('hidden');

      document
        .querySelectorAll('.section-{{ section.id }}-padding .tc-testimonials-card.mobile-hidden-slider')
        .forEach((card) => card.classList.remove('mobile-hidden-slider'));
    });
  });
</script>

<style>
  .section-{{ section.id }}-padding .tc-testimonials__slider .splide__arrow {
    background: #01B8A3;
    opacity: 1;
  }
  .section-{{ section.id }}-padding .tc-testimonials__slider .splide__arrow svg {
    width: 12px;
    height: 12px;
    fill: #fff;
  }
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding .tc-testimonials__slider .splide__arrow--prev {
        bottom: -60px;
        left: calc(50% - 50px);
        top: auto;
    }
    .section-{{ section.id }}-padding .tc-testimonials__slider .splide__arrow--next {
        bottom: -60px;
        top: auto;
        right: calc(50% - 50px);
    }
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding .tc-testimonials__slider .splide__arrow--prev {
        left: -40px;
    }
    .section-{{ section.id }}-padding .tc-testimonials__slider .splide__arrow--next {
        right: -40px;
    }
  }
</style>

