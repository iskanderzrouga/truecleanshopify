{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }}; {% if section.settings.gradient_bg %}background: linear-gradient(180deg, #F5FFC0 0%, #EEFAFA 100%); {% endif %}"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-12">
      {% if section.settings.heading != blank %}
        <h2
          class="text-[24px] md:text-[36px] font-bold !leading-tight text-[#001C19] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.heading_color }};"
        >
          {{ section.settings.heading }}
        </h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div
          class="text-[16px] md:text-[17px] font-normal !leading-tight text-[#001C19] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
          style="color: {{ section.settings.description_color }};"
        >
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% assign max_width = section.settings.max_width %}
      {% comment %} {% assign max_width = section.settings.max_width |  divided_by: 2 %} {% endcomment %}
      {% assign max_width_px = max_width | append: 'px' %}
      {% if section.settings.image != blank %}
        {{
          section.settings.image
          | image_url: width: max_width
          | image_tag: class: 'w-full section-main-image', sizes: max_width_px
        }}
      {% endif %}

      {% if section.blocks.size > 0 %}
        <div class="w-full">
          <div class="splide ah-reviews__slider">
            <div class="splide__track pb-2">
              <ul class="splide__list">
                {% for block in section.blocks %}
                  {% case block.type %}
                    {% when 'row' %}
                      <div class="splide__slide">
                        <div class="flex flex-col gap-4 rounded-[20px] p-4 h-full" style="background-color: {{ block.settings.bgcolor }};">
                          {% if block.settings.image != blank %}
                            {{
                              block.settings.image
                              | image_url: width: 500
                              | image_tag:
                                class: 'w-full rounded-[20px]',
                                sizes: '500px'
                            }}
                          {% endif %}

                          <div class="flex-1 flex flex-col justify-between gap-3">
                            <div class="flex flex-col gap-1">
                              {% if block.settings.heading != blank %}
                                <div
                                  class="text-[17px] md:text-[20px] font-bold !leading-tight text-[#001C19]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                                  style="color: {{ block.settings.heading_color }};"
                                >
                                  {{ block.settings.heading }}
                                </div>
                              {% endif %}

                              {% if block.settings.description != blank %}
                                <div
                                  class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[15px] md:text-[15px] {% endif %} font-medium !leading-[1.5] text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                                  style="color: {{ block.settings.description_color }};"
                                >
                                  {{ block.settings.description }}
                                </div>
                              {% endif %}
                            </div>
                            <div class="flex flex-col gap-1">
                              <div class="flex items-center gap-2">
                                {% if block.settings.name != blank %}
                                  <div
                                    class="text-[14px] md:text-[14px] font-bold !leading-tight text-[#000]"
                                    style="color: {{ block.settings.name_color }};"
                                  >
                                    {{ block.settings.name }}
                                  </div>
                                {% endif %}
                                {% if block.settings.stars != blank %}
                                  {{
                                    block.settings.stars
                                    | image_url: width: 100
                                    | image_tag: class: 'w-full max-w-[100px]', sizes: '100px'
                                  }}
                                {% endif %}
                              </div>
                              <div class="flex items-center gap-1">
                                {% if block.settings.icon != blank %}
                                  {{
                                    block.settings.icon
                                    | image_url: width: 16
                                    | image_tag: class: 'w-full max-w-[16px]', sizes: '16px'
                                  }}
                                {% endif %}
                                {% if block.settings.verified != blank %}
                                  <div
                                    class="text-[12px] md:text-[12px] font-normal !leading-tight text-[#000]"
                                    style="color: {{ block.settings.verified_color }};"
                                  >
                                    {{ block.settings.verified }}
                                  </div>
                                {% endif %}
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                  {% endcase %}
                {% endfor %}
              </ul>
            </div>
          </div>
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {%- render 'icon-arrow-right' -%}
          </a>
        </div>
      {% endif %}

      {% if section.settings.btn_bottom_text != blank %}
        <div
          class="text-[10px] md:text-[12px] font-normal !leading-tight text-[#001C19] text-center"
          style="color: {{ section.settings.btn_bottom_text_color }};"
        >
          {{ section.settings.btn_bottom_text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .section-{{ section.id }}-padding .ah-reviews__slider .splide__pagination__page {
    height: 10px;
    background: transparent;
    width: 10px;
    border: 1px solid {{section.settings.color_tertiary}};
  }
  .section-{{ section.id }}-padding .ah-reviews__slider .splide__pagination__page.is-active {
    background: {{section.settings.color_tertiary}};
    transform: unset;
    width: 40px;
    border-radius: 20px;
  }
  .section-{{ section.id }}-padding .ah-reviews__slider .splide__pagination {
    gap: 5px;
    bottom: -40px;
    padding: 0;
    justify-content: flex-start;
  }

  .section-{{ section.id }}-padding .ah-reviews__slider .splide__arrow {
    width: 48px;
    height: 48px;
    border: 2px solid {{section.settings.color_tertiary}};
    background-color: transparent;
    opacity: 1;
    top: auto;
    bottom: -80px;
  }
  .section-{{ section.id }}-padding .ah-reviews__slider .splide__arrow svg {
    width: 24px;
    height: 24px;
    fill: {{section.settings.color_tertiary}};
  }
  .section-{{ section.id }}-padding .ah-reviews__slider .splide__arrow--prev {
    right: 80px;
    left: auto;
  }
  .section-{{ section.id }}-padding .ah-reviews__slider .splide__arrow--next {
    right: 0px;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.section-{{ section.id }}-padding .ah-reviews__slider', {
      perPage: {{section.settings.count_desktop}},
      perMove: 1,
      arrows: false,
      rewind: true,
      gap: '15px',
      trimSpace: false,
      pagination: false,
      breakpoints: {
        768: {
          perPage: {{section.settings.count_mobile}},
          arrows: false,
          gap: '10px',
          pagination: true,
          padding: { right: '60px' },
        },
      },
    });
    splide.mount();
  });
</script>

{% schema %}
