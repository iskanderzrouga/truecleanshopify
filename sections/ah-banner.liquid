{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding relative"
  style="background-color: {{ section.settings.bgcolor }};"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative">
    <div class="">
      {% if section.blocks.size > 0 %}
        <div class="splide ah-home__slider">
          <div class="splide__track">
            <div class="splide__list">
              {% for block in section.blocks %}
                {% case block.type %}
                  {% when 'row' %}
                    <div class="splide__slide h-auto">
                      <div class="flex flex-col-reverse md:flex-row h-full">
                        <div class="flex-1 px-4 py-10 flex flex-col justify-center gap-4 w-full" style="background: linear-gradient(180deg, #EFF6F6 0%, #D1F9F9 100%);">
                          <div class="max-w-[780px] mx-auto flex flex-col items-center justify-center gap-4 w-full bg-[#fff] border-[1.5px] border-black rounded-[20px] px-4 py-10 md:px-8 lg:px-16" style="box-shadow: 5px 5px 0px 0px #000000;">
                            {% if block.settings.heading != blank %}
                              <div
                                class="text-[26px] md:text-[40px] font-bold !leading-tight text-[#001C19]  {% if block.settings.heading_m_center %} max-md:text-center {% endif %} {% if block.settings.heading_d_center %} md:text-center {% endif %}"
                                style="color: {{ block.settings.heading_color }};"
                              >
                                {{ block.settings.heading }}
                              </div>
                            {% endif %}

                            {% if block.settings.description != blank %}
                              <div
                                class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[16px] md:text-[18px] {% endif %} font-medium !leading-[1.5] text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                                style="color: {{ block.settings.description_color }};"
                              >
                                {{ block.settings.description }}
                              </div>
                            {% endif %}

                            {% if block.settings.button_label != blank %}
                              <div class="w-full md:w-fit mx-auto mt-6 md:mt-8">
                                <a
                                  href="{{ block.settings.button_url }}"
                                  class="new-button--primary"
                                >
                                  {{ block.settings.button_label }}
                                </a>
                                {% if block.settings.btn_bottom_text != blank %}
                                  <div
                                    class="mt-2 text-[13px] md:text-[13px] font-medium !leading-tight text-[#001C19] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                                    style="color: {{ block.settings.btn_bottom_text_color }};"
                                  >
                                    {{ block.settings.btn_bottom_text }}
                                  </div>
                                {% endif %}
                              </div>
                            {% endif %}
                          </div>

                          <div class="max-w-[780px] mx-auto bg-white rounded-[20px] px-4 py-5 flex flex-col gap-4 border-[1.5px] border-black" style="box-shadow: 5px 5px 0px 0px #000000;">
                            {% if block.settings.review_text != blank %}
                              <div
                                class="text-[16px] md:text-[18px] font-medium !leading-tight text-[#001C19]"
                              >
                                {{ block.settings.review_text }}
                              </div>
                            {% endif %}
                            <div class="flex items-center gap-2">
                              {% if block.settings.review_image != blank %}
                                {{
                                  block.settings.review_image
                                  | image_url: width: 24
                                  | image_tag: class: 'w-full max-w-[24px]', sizes: '24px'
                                }}
                              {% endif %}

                              {% if block.settings.review_name != blank %}
                                <div
                                  class="text-[14px] md:text-[16px] font-bold !leading-tight text-[#001C19]"
                                >
                                  {{ block.settings.review_name }}
                                </div>
                              {% endif %}
                              {% if block.settings.review_icon != blank %}
                                {{
                                  block.settings.review_icon
                                  | image_url: width: 16
                                  | image_tag: class: 'w-full max-w-[16px]', sizes: '16px'
                                }}
                              {% endif %}
                              {% if block.settings.review_verified != blank %}
                                <div
                                  class="text-[12px] md:text-[14px] font-normal !leading-tight text-[#001C19]"
                                >
                                  {{ block.settings.review_verified }}
                                </div>
                              {% endif %}
                            </div>
                          </div>
                        </div>

                        {% assign max_width = section.settings.max_width | divided_by: 2 %}
                        {% assign max_width_px = max_width | append: 'px' %}
                        {% if block.settings.image != blank %}
                          {{
                            block.settings.image
                            | image_url: width: max_width
                            | image_tag:
                              class: 'w-full aspect-[1/1] max-w-[850px] h-full object-cover',
                              sizes: max_width_px
                          }}
                        {% endif %}
                      </div>
                    </div>
                {% endcase %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
            {%- render 'icon-arrow-right' -%}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="text-[13px] md:text-[13px] font-normal !leading-tight text-[#001C19] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var splide = new Splide('.section-{{ section.id }}-padding .ah-home__slider', {
      perPage: 1,
      perMove: 1,
      rewind: true,
      gap: '15px',
      trimSpace: false,
      pagination: false,
      mediaQuery: 'min',
      arrows: true,
      padding: { right: '0' },
      breakpoints: {
        750: {
          arrows: false,
          pagination: true,
        },
      },
    });
    splide.mount();
  });
</script>

<style>
  .section-{{ section.id }}-padding .ah-home__slider .splide__pagination  {
    bottom: 34px;
  }
  .section-{{ section.id }}-padding .ah-home__slider .splide__pagination__page {
    opacity: 1;
    background: white;
    transform: unset;
  }
  .section-{{ section.id }}-padding .ah-home__slider .splide__pagination__page.is-active  {
    opacity: 1;
    background: black;
    transform: unset;
  }
  .section-{{ section.id }}-padding .ah-home__slider .splide__arrow {
    background: black;
    opacity: 1;
  }
  .section-{{ section.id }}-padding .ah-home__slider .splide__arrow svg {
    width: 12px;
    height: 12px;
    fill: #fff;
  }
  .section-{{ section.id }}-padding .ah-home__slider .splide__arrow--prev {
    top: 200px;
  }
  .section-{{ section.id }}-padding .ah-home__slider .splide__arrow--next {
    top: 200px;
  }
</style>

