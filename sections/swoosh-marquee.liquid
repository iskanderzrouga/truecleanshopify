{%- style -%}
  .swoosh-marquee--{{ section.id }} {
    background-color: {{ section.settings.bgcolor }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    overflow: hidden;
    border-top: 3px solid {{ section.settings.border_color }};
    border-bottom: 3px solid {{ section.settings.border_color }};
  }

  .swoosh-marquee--{{ section.id }} .swoosh-marquee__track {
    display: flex;
    width: max-content;
    animation: swoosh-marquee-scroll-{{ section.id }} {{ section.settings.speed }}s linear infinite;
  }

  .swoosh-marquee--{{ section.id }} .swoosh-marquee__items {
    display: flex;
    gap: 48px;
    padding: 0 24px;
    white-space: nowrap;
    font-weight: 800;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  @keyframes swoosh-marquee-scroll-{{ section.id }} {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }
{%- endstyle -%}

<div class="swoosh-marquee swoosh-marquee--{{ section.id }}">
  <div class="swoosh-marquee__track">
    <div class="swoosh-marquee__items">
      {% for block in section.blocks %}
        {% if block.type == 'item' and block.settings.text != blank %}
          <span>✓ {{ block.settings.text }}</span>
        {% endif %}
      {% endfor %}
    </div>
    <div class="swoosh-marquee__items">
      {% for block in section.blocks %}
        {% if block.type == 'item' and block.settings.text != blank %}
          <span>✓ {{ block.settings.text }}</span>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Swoosh Marquee",
  "settings": [
    {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color",
      "default": "#0A1F1C"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#BDFF00"
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border Color",
      "default": "#00B7A2"
    },
    {
      "type": "range",
      "id": "speed",
      "min": 10,
      "max": 40,
      "step": 1,
      "unit": "s",
      "label": "Scroll Speed",
      "default": 18
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Padding Top",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Swoosh Marquee",
      "blocks": [
        { "type": "item" },
        { "type": "item" },
        { "type": "item" }
      ]
    }
  ]
}
{% endschema %}
