            </svg>
          </span>
          {% assign target_date = '2026-01-20' | date: '%s' %}
          {% assign today_date = 'now' | date: '%s' %}
          {% assign diff_seconds = target_date | minus: today_date %}
          {% assign diff_days = diff_seconds | divided_by: 86400 %}

          {% assign today = 'now' | date: '%-d %b' | upcase %}
          <p class="text-[13px] md:text-[18px] font-medium text-[#000000] !leading-tight">
            <span class="underline font-bold">Urgent Update: {{ today }}</span>, {{ section.settings.shipping_heading | replace: 'DATEPLACEHOLDER', diff_days }}
          </p>
        </div>
      </div>
    {% endif %}

    <!-- Urgency Banner -->
    {% if section.settings.show_urgency_banner %}
      <div
        class="text-center py-3 px-4 mb-6 rounded-lg"
        style="background-color: #D30101 !important; color: #ffffff !important;"
      >
        <p class="text-[18px] md:text-[22px] font-bold m-0 mb-1" style="color: #ffffff !important;">
          {{ section.settings.urgency_heading }}
        </p>
        <p class="text-[14px] md:text-[16px] m-0" style="color: rgba(255,255,255,0.9) !important;">
          {{ section.settings.urgency_subheading }}
        </p>
      </div>
    {% endif %}

    <div class="product !grid !grid-cols-1 md:!grid-cols-9 !gap-2 md:!gap-10 lg:!gap-[60px] px-4 md:px-0">
      <!-- Product Images Column -->
      <div class="md:col-span-5">
        <div>
          <div class="w-full">
            {% render 'product-image-slider-vertical', product: product, section: section %}
          </div>

          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {% when 'testimonial' %}
                <div class="hidden md:block w-full mt-7">
                  {% render 'new-lp-featured-product-testimonial', block: block %}
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>

      <!-- Product Info Column -->
      <div class="md:!col-span-4 max-md:pt-6 !w-full !max-w-none !px-0 md:!p-0">
        <section id="ProductInfo-{{ section.id }}" class="product__info-container">
          {%- assign product_form_id = 'product-form-' | append: section.id -%}

          <!-- Review Badge -->
          {% for block in section.blocks %}
            {% if block.type == 'review' %}
              <div class="mb-2">
                <div class="flex items-center gap-2">
                  {% if block.settings.image != blank %}
                    {{
                      block.settings.image
                      | image_url: width: 56
                      | image_tag: class: 'w-full max-w-[56px]', sizes: '56px'
                    }}
                  {% endif %}
                  {% if block.settings.heading != blank %}
                    <div class="text-[16px] font-medium !leading-tight text-[#001C19]">
                      {{ block.settings.heading }}
                    </div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}

          <!-- Heading -->
          {% if section.settings.heading != blank %}
            <h2 class="text-[24px] lg:text-[24px] font-bold !leading-tight text-[#001C19] !mt-2 !mb-2">
              {{ section.settings.heading }}
            </h2>
          {% endif %}

          <!-- Description -->
          {% if section.settings.description != blank %}
            <div class="text-[18px] md:text-[20px] font-medium !leading-tight text-[#001C19] !m-0 mb-4">
              {{ section.settings.description }}
            </div>
          {% endif %}

          <!-- Feature Bullets -->
          {% assign has_features = false %}
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              {% assign has_features = true %}
              {% break %}
            {% endif %}
          {% endfor %}

          {% if has_features %}
            <div
              class="flex flex-col gap-2 !my-4"
            >
              {% for block in section.blocks %}
                {% if block.type == 'feature' %}
                  <div class="flex items-start gap-2">
                    {{
                      block.settings.icon
                      | image_url: width: 30
                      | image_tag: class: 'w-5 h-5 mt-0.5 object-contain flex-shrink-0'
                    }}
                    <div class="text-[#001C19] text-[16px] md:text-[16px] font-semibold !leading-normal">
                      {{ block.settings.description }}
                    </div>
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          <!-- Variant Picker & Buy Buttons -->
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'variant_picker' -%}
                <div id="productsVariants" class="show-subscription w-full">
                  {% if block.settings.horizontal_type %}
                    {% render 'product-variant-picker-quaternary-mk',
                      product: product,
                      block: block,
                      product_form_id: product_form_id
                    %}
                  {% elsif block.settings.updated_version %}
                    {% render 'product-variant-picker-quinary',
                      product: product,
                      block: block,
                      product_form_id: product_form_id
                    %}
                  {% else %}
                    {% render 'product-variant-picker-tertiary',
                      product: product,
                      block: block,
                      product_form_id: product_form_id
                    %}
                  {% endif %}
                </div>

              {% when 'variant_picker_updated' %}
                {% render 'product-variant-picker-updated',
                  product: product,
                  block: block,
                  product_form_id: product_form_id
                %}

                {% if block.settings.description1 != blank or block.settings.description2 != blank %}
                  <div class="bg-[#DFF4F4] rounded-[10px] grid grid-cols-2 p-3 md:p-4 gap-2 my-3">
                    <div class="flex flex-col items-center text-center gap-1 md:gap-2">
                      {% if block.settings.icon1 != blank %}
                        {{
                          block.settings.icon1
                          | image_url: width: 24
                          | image_tag: class: 'w-full h-fit object-contain max-w-[20px] md:max-w-[24px]'
                        }}
                      {% endif %}
                      {% if block.settings.description1 != blank %}
                        <div class="font-medium text-[13px] md:text-[14px] !leading-[1] w-full">
                          {{ block.settings.description1 }}
                        </div>
                      {% endif %}
                    </div>
                    <div class="flex flex-col items-center text-center gap-1 md:gap-2">
                      {% if block.settings.icon2 != blank %}
                        {{
                          block.settings.icon2
                          | image_url: width: 24
                          | image_tag: class: 'w-full h-fit object-contain max-w-[20px] md:max-w-[24px]'
                        }}
                      {% endif %}
                      {% if block.settings.description2 != blank %}
                        <div class="font-medium text-[13px] md:text-[14px] !leading-[1] w-full">
                          {{ block.settings.description2 }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}

              {%- when 'ship_by' -%}
                <div class="flex gap-2 md:gap-4 items-center pb-4 !my-2 md:!my-4">
                  {% if block.settings.icon != blank %}
                    {{
                      block.settings.icon
                      | image_url: width: 24
                      | image_tag: class: 'w-full max-w-[12px] md:max-w-[24px]', sizes: '24px'
                    }}
                  {% endif %}
                  {% if block.settings.text != blank %}
                    {% assign four_days = 4 | times: 86400 %}
                    {% assign future = 'now' | date: '%s' | plus: four_days %}

                    {% assign date_day = future | date: '%d' %}
                    {% assign date_month = 'now' | date: '%B' | slice: 0, 3 %}
                    {% assign date_year = 'now' | date: '%Y' %}
                    {% assign date_string = date_day
                      | append: ' '
                      | append: date_month
                      | append: ' '
                      | append: date_year
                    %}
                    <div class="text-[16px] md:text-[16px] font-normal !leading-tight text-[#001C19]">
                      {{ block.settings.text | replace: 'DATEPLACEHOLDER', date_string }}
                    </div>
                  {% endif %}
                  {% if block.settings.info_text != blank %}
                    {% render 'tooltip', block: block %}
                  {% endif %}
                </div>

              {%- when 'collapsible_tab' -%}
                <div class="product__accordion accordion quick-add-hidden" {{ block.shopify_attributes }}>
                  <details id="Details-{{ block.id }}-{{ section.id }}" class="group">
                    <summary>
                      <div class="summary__title">
                        {% render 'icon-accordion', icon: block.settings.icon %}
                        <h2 class="h4 accordion__title inline-richtext">
                          {{ block.settings.heading | default: block.settings.page.title | escape }}
                        </h2>
                      </div>
                      <span>
                        {% render 'icon-plus-black' %}
                      </span>
                    </summary>
                    <div class="accordion__content rte" id="ProductAccordion-{{ block.id }}-{{ section.id }}">
                      {{ block.settings.content }}
                      {{ block.settings.page.content }}
                    </div>
                  </details>
                </div>

              {%- when 'buy_buttons' -%}
                <div class="flex flex-col gap-4">
                  <div class="w-full">
                    {%- render 'buy-buttons--secondary-mk',
                      block: block,
                      product: product,
                      product_form_id: product_form_id,
                      section_id: section.id,
                      show_pickup_availability: true
                    -%}
                  </div>
                </div>
                <div class="flex gap-2 justify-center mt-4">
                  {% for i in (1..3) %}
                    {% assign icon_name = 'icon' | append: i %}
                    {% assign icon = block.settings[icon_name] %}
                    {% assign description_name = 'text' | append: i %}
                    {% assign description = block.settings[description_name] %}
                    {% if description != blank %}
                      <div class="flex items-center gap-2">
                        {% if icon != blank %}
                          {{
                            icon
                            | image_url: width: 28
                            | image_tag: class: 'w-full h-fit object-contain max-w-[24px] md:max-w-[28px]'
                          }}
                        {% endif %}
                        <div class="text-[12px] font-normal !leading-tight text-[#001C19]">{{ description }}</div>
                      </div>
                    {% endif %}
                  {% endfor %}
                </div>

              {% when 'testimonial' %}
                <div class="block md:hidden w-full">
                  {% render 'new-lp-featured-product-testimonial', block: block %}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </section>
      </div>
    </div>
  </div>
</product-info>

