{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  .section-{{ section.id }}-padding .tc-introduce {
    background: radial-gradient(118.21% 91.82% at -13.77% -40.82%, #E8FF33 0%, #00B7A2 100%);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .section-{{ section.id }}-padding .tc-introduce {
      background: radial-gradient(26.21% 174.82% at 2.23% -94.82%, #E8FF33 0%, #00B7A2 100%);
    }
  }

  .section-{{ section.id }}-padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }};"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-10 md:gap-[60px]">
      <div class="flex flex-col items-center justify-center gap-2 md:gap-3 w-full">
        {% if section.settings.heading != blank %}
          <h2
            class="max-w-[680px] mx-auto text-[28px] md:text-[36px] font-bold !leading-tight text-[#001C19] {% if section.settings.heading_m_center %} max-md:text-center {% endif %} {% if section.settings.heading_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.heading_color }};"
          >
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[17px] md:text-[20px] font-medium !leading-tight text-[#001C19] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% if section.settings.label != blank %}
          <div
            class="mt-6 md:mt-7 text-[20px] md:text-[28px] font-bold !leading-tight text-[#001C19]  {% if section.settings.label_m_center %} max-md:text-center {% endif %} {% if section.settings.label_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.label_color }};"
          >
            {{ section.settings.label }}
          </div>
        {% endif %}
      </div>

      {% if section.settings.video != blank %}
        <div class="relative w-full overflow-hidden rounded-[20px] aspect-[1/1] tc-video-wrapper">
          <video
            src="{{ section.settings.video }}"
            class="w-full h-full object-cover cursor-pointer tc-video"
            playsinline
            muted
          ></video>

          <div class="absolute inset-0 flex items-center justify-center tc-video-play-btn">
            <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center">
              <div
                class="
                  w-0 h-0
                  border-l-[22px] border-l-black
                  border-y-[14px] border-y-transparent !block
                "
              ></div>
            </div>
          </div>
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto flex flex-col items-center justify-center gap-3">
          <a
            href="{{ section.settings.button_url }}"
            class="new-button--primary"
          >
            {{ section.settings.button_label }}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="text-[13px] md:text-[13px] font-medium !leading-tight text-[#001C19] flex items-center justify-center gap-2 {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {% if section.settings.btn_bottom_icon != blank %}
                {{
                  section.settings.btn_bottom_icon
                  | image_url: width: 16
                  | image_tag: class: 'w-full max-w-[16px] h-fit object-contain', sizes: '16px'
                }}
              {% endif %}
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.tc-video-wrapper').forEach((wrapper) => {
      const video = wrapper.querySelector('.tc-video');
      const btn = wrapper.querySelector('.tc-video-play-btn');

      function togglePlay() {
        if (video.paused) {
          video.play();
          btn.classList.add('hidden');
        } else {
          video.pause();
          btn.classList.remove('hidden');
        }
      }

      btn.addEventListener('click', togglePlay);
      video.addEventListener('click', togglePlay);

      video.addEventListener('pause', () => btn.classList.remove('hidden'));
      video.addEventListener('play', () => btn.classList.add('hidden'));
    });
  });
</script>

