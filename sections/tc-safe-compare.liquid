{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}
  -padding .section-main-image {
    border-radius: {{ section.settings.border_radius }}px;
  }
{%- endstyle -%}

<div
  id="{{ section.settings.section_id }}"
  class="section-{{ section.id }}-padding px-5 relative"
  style="background-color: {{ section.settings.bgcolor }};"
>
  {% if section.settings.bg != blank %}
    {{
      section.settings.bg
      | image_url: width: 1920
      | image_tag: class: 'absolute top-0 left-0 w-full h-full object-cover', sizes: '1920px'
    }}
  {% endif %}

  <div class="mx-auto w-full relative" style="max-width: {{ section.settings.max_width }}px;">
    <div class="flex flex-col items-center justify-center gap-6 md:gap-10">
      <div class="flex flex-col items-center justify-center gap-3 md:gap-4">
        {% if section.settings.heading != blank %}
          <h2 class="text-[28px] md:text-[36px] font-bold leading-tight text-[#001C19] max-md:text-center md:text-center">
            {{ section.settings.heading }}
            <svg
              class="inline-block align-baseline h-[1em] w-[1em] ml-1 mt-1"
              viewBox="0 0 28 28"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path d="M26.8327 14.0002L23.986 10.7569L24.3827 6.46354L20.171 5.50688L17.966 1.79688L13.9993 3.50021L10.0327 1.79688L7.82768 5.50688L3.61602 6.45188L4.01268 10.7452L1.16602 14.0002L4.01268 17.2435L3.61602 21.5485L7.82768 22.5052L10.0327 26.2152L13.9993 24.5002L17.966 26.2035L20.171 22.4935L24.3827 21.5369L23.986 17.2435L26.8327 14.0002ZM11.666 19.8335L6.99935 15.1669L8.64435 13.5219L11.666 16.5319L19.3544 8.84354L20.9993 10.5002L11.666 19.8335Z"
                    fill="#00AA1C"/>
            </svg>
          </h2>
        {% endif %}

        {% if section.settings.description != blank %}
          <div
            class="text-[17px] md:text-[17px] font-medium !leading-tight text-[#001C19] {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if section.settings.description_d_center %} md:text-center {% endif %}"
            style="color: {{ section.settings.description_color }};"
          >
            {{ section.settings.description }}
          </div>
        {% endif %}

        {% assign max_width = 740 %}
        {% comment %} {% assign max_width = section.settings.max_width |  divided_by: 2 %} {% endcomment %}
        {% assign max_width_px = max_width | append: 'px' %}
        {% if section.settings.image != blank %}
          {{
            section.settings.image
            | image_url: width: max_width
            | image_tag: class: 'w-full section-main-image', sizes: max_width_px
          }}
        {% endif %}
      </div>

      {% if section.blocks.size > 0 %}
        <div class="w-full flex flex-col gap-6">
          <div
            class="w-full grid grid-cols-2 border border-[#D5D5D5] rounded-[10px] md:rounded-[25px] px-3 md:px-6 py-4 md:py-7 bg-white"
            style="box-shadow: 0px 0px 10px 0px #0000000D;"
          >
            {% for block in section.blocks %}
              {% case block.type %}
                {% when 'row' %}
                  <div class="flex flex-col w-full gap-4 items-center {% if forloop.last %} border-l border-[#D5D5D5] pl-4 {% else %} pr-4 {% endif %}">
                    {% assign icon = block.settings.icon %}

                    {% if block.settings.label != blank %}
                      <div
                        class="text-[16px] md:text-[17px] font-medium !leading-tight text-[#001C19] flex items-center justify-center gap-2 {% if block.settings.label_m_center %} max-md:text-center {% endif %} {% if block.settings.label_d_center %} md:text-center {% endif %}"
                        style="color: {{ block.settings.label_color }};"
                      >
                        {% if icon != blank %}
                          {{
                            icon
                            | image_url: width: 16
                            | image_tag: class: 'w-full max-w-[16px] h-fit object-contain', sizes: '16px'
                          }}
                        {% endif %}

                        {{ block.settings.label }}
                      </div>
                    {% endif %}

                    {% if block.settings.image != blank %}
                      {{
                        block.settings.image
                        | image_url: width: 260
                        | image_tag:
                          class: 'w-full max-h-[100px] md:max-h-[150px] mx-auto object-contain',
                          sizes: '260px'
                      }}
                    {% endif %}

                    {% assign main_forloop_first= forloop.first %}

                    <div class="w-fit mx-auto flex flex-col gap-1 md:gap-2">
                      {% for i in (1..8) %}
                        {% assign description_name = 'description' | append: i %}
                        {% assign description = block.settings[description_name] %}

                        {% if description != blank %}
                          <div class="flex gap-2 items-center">
                            {% if icon != blank %}
                              {{
                                icon
                                | image_url: width: 20
                                | image_tag: class: 'w-full max-w-[20px] h-fit object-contain', sizes: '20px'
                              }}
                            {% endif %}
                            <div
                              class="{% if block.settings.small_description %} text-[12px] md:text-[14px] {% else %} text-[15px] md:text-[17px] {% endif %} {% if main_forloop_first %} font-medium {%  else %} font-bold {% endif %} !leading-tight text-[#000] {% if block.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
                              style="color: {{ block.settings.description_color }};"
                            >
                              {{ description }}
                            </div>
                          </div>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </div>
              {% endcase %}
            {% endfor %}
          </div>

          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'review' %}
                <div class="flex gap-2 md:gap-6 items-start">
                  {% if block.settings.image != blank %}
                    {{
                      block.settings.image
                      | image_url: width: 130
                      | image_tag: class: 'w-full max-w-[56px] md:max-w-[130px] h-auto object-contain', sizes: '130px'
                    }}
                  {% endif %}

                  <div
                    class="flex flex-col gap-[10px] flex-1 bg-white rounded-[10px] md:rounded-[25px] px-3 md:px-6 py-4 md:py-7"
                    style="box-shadow: 0px 0px 10px 0px #00000033;"
                  >
                    {% if block.settings.description != blank %}
                      <div class="text-[14px] md:text-[17px] font-medium !leading-tight text-[#001C19]">
                        {{ block.settings.description }}
                      </div>
                    {% endif %}

                    <div class="flex items-center justify-between gap-3">
                      {% if block.settings.heading != blank %}
                        <div class="text-[13px] md:text-[16px] font-bold !leading-tight text-[#001C19]">
                          {{ block.settings.heading }}
                        </div>
                      {% endif %}

                      <div class="flex-1 flex items-center gap-2">
                        {% if block.settings.icon != blank %}
                          {{
                            block.settings.icon
                            | image_url: width: 20
                            | image_tag: class: 'w-full max-w-[20px] h-auto', sizes: '20px', preload: true
                          }}
                        {% endif %}
                        {% if block.settings.verified != blank %}
                          <div class="text-[12px] md:text-[14px] font-normal !leading-tight text-[#001C19]">
                            {{ block.settings.verified }}
                          </div>
                        {% endif %}
                      </div>
                    </div>
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <div class="w-full md:w-fit mx-auto flex flex-col items-center justify-center gap-3">
          <a href="{{ section.settings.button_url }}" class="new-button--primary">
            {{ section.settings.button_label }}
          </a>
          {% if section.settings.btn_bottom_text != blank %}
            <div
              class="text-[13px] md:text-[13px] font-medium !leading-tight text-[#001C19] flex items-center justify-center gap-2 {% if section.settings.description_m_center %} max-md:text-center {% endif %} {% if block.settings.description_d_center %} md:text-center {% endif %}"
              style="color: {{ section.settings.btn_bottom_text_color }};"
            >
              {% if section.settings.btn_bottom_icon != blank %}
                {{
                  section.settings.btn_bottom_icon
                  | image_url: width: 16
                  | image_tag: class: 'w-full max-w-[16px] h-fit object-contain', sizes: '16px'
                }}
              {% endif %}
              {{ section.settings.btn_bottom_text }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

