{%- style -%}
  .swoosh-hero--{{ section.id }} {
    background-color: {{ section.settings.bgcolor }};
    padding-top: {{ section.settings.padding_top_m }}px;
    padding-bottom: {{ section.settings.padding_bottom_m }}px;
    position: relative;
    overflow: hidden;
  }

  @media screen and (min-width: 750px) {
    .swoosh-hero--{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .swoosh-hero--{{ section.id }}::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle, rgba(0, 183, 162, 0.14) 1px, transparent 1px);
    background-size: 18px 18px;
    opacity: 0.4;
    pointer-events: none;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__inner {
    position: relative;
    z-index: 1;
    margin: 0 auto;
    max-width: {{ section.settings.max_width }}px;
    padding: 0 24px;
    display: grid;
    grid-template-columns: minmax(0, 1.05fr) minmax(0, 0.95fr);
    gap: 48px;
    align-items: center;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 20px;
    border-radius: 999px;
    border: 2px solid #001c19;
    background: #e8ff33;
    font-weight: 700;
    font-size: 0.9rem;
    box-shadow: 3px 3px 0 #001c19;
    margin-bottom: 16px;
  }

  .swoosh-hero--{{ section.id }} h1 {
    font-size: clamp(2.4rem, 4vw, 3.8rem);
    line-height: 1.05;
    margin-bottom: 16px;
    color: #001c19;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__highlight {
    color: #00b7a2;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__neon {
    display: inline-block;
    background: #bdff00;
    padding: 2px 10px;
    border-radius: 8px;
    border: 2px solid #001c19;
    box-shadow: 2px 2px 0 #001c19;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__sub {
    font-size: 1.1rem;
    color: #1b3b35;
    line-height: 1.5;
    margin-bottom: 20px;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__pills {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 24px;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__pill {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    border-radius: 999px;
    border: 2px solid #00b7a2;
    background: #ffffff;
    font-weight: 700;
    font-size: 0.95rem;
    color: #0f2d27;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__pill-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #00e8c8;
    flex-shrink: 0;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__quote {
    border: 3px solid #001c19;
    border-radius: 18px;
    background: #ffffff;
    padding: 18px 20px;
    box-shadow: 4px 4px 0 #001c19;
    margin-bottom: 28px;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__quote q {
    display: block;
    font-style: italic;
    color: #3b6359;
    line-height: 1.5;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__quote .swoosh-hero__quote-author {
    margin-top: 8px;
    font-weight: 700;
    color: #00b7a2;
    font-size: 0.9rem;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 36px;
    border-radius: 999px;
    border: 3px solid #001c19;
    background: #bdff00;
    color: #001c19;
    font-weight: 800;
    font-size: 1.1rem;
    box-shadow: 4px 4px 0 #001c19;
    text-decoration: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__cta:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 #001c19;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__media {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__media-inner {
    background: #ffffff;
    border-radius: 28px;
    border: 3px solid #001c19;
    box-shadow: 6px 6px 0 #001c19;
    padding: 24px;
    width: 100%;
    max-width: 520px;
  }

  .swoosh-hero--{{ section.id }} .swoosh-hero__media-inner img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 18px;
    background: #f7fffd;
  }

  @media screen and (max-width: 900px) {
    .swoosh-hero--{{ section.id }} .swoosh-hero__inner {
      grid-template-columns: 1fr;
      gap: 32px;
    }
    .swoosh-hero--{{ section.id }} .swoosh-hero__media-inner {
      max-width: 100%;
    }
  }
{%- endstyle -%}

<section id="{{ section.settings.section_id }}" class="swoosh-hero swoosh-hero--{{ section.id }}">
  <div class="swoosh-hero__inner">
    <div class="swoosh-hero__content">
      {% if section.settings.badge_text != blank %}
        <div class="swoosh-hero__badge">{{ section.settings.badge_text }}</div>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="swoosh-hero__sub">{{ section.settings.subheading }}</div>
      {% endif %}

      <div class="swoosh-hero__pills">
        {% if section.settings.pill_1 != blank %}
          <span class="swoosh-hero__pill"><span class="swoosh-hero__pill-dot"></span>{{ section.settings.pill_1 }}</span>
        {% endif %}
        {% if section.settings.pill_2 != blank %}
          <span class="swoosh-hero__pill"><span class="swoosh-hero__pill-dot"></span>{{ section.settings.pill_2 }}</span>
        {% endif %}
        {% if section.settings.pill_3 != blank %}
          <span class="swoosh-hero__pill"><span class="swoosh-hero__pill-dot"></span>{{ section.settings.pill_3 }}</span>
        {% endif %}
        {% if section.settings.pill_4 != blank %}
          <span class="swoosh-hero__pill"><span class="swoosh-hero__pill-dot"></span>{{ section.settings.pill_4 }}</span>
        {% endif %}
      </div>

      {% if section.settings.quote != blank %}
        <div class="swoosh-hero__quote">
          <q>{{ section.settings.quote }}</q>
          {% if section.settings.quote_author != blank %}
            <div class="swoosh-hero__quote-author">{{ section.settings.quote_author }}</div>
          {% endif %}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_url }}" class="swoosh-hero__cta">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>

    <div class="swoosh-hero__media">
      <div class="swoosh-hero__media-inner">
        {% if section.settings.image != blank %}
          {{
            section.settings.image
            | image_url: width: 900
            | image_tag: alt: section.settings.image_alt, sizes: '900px'
          }}
        {% elsif section.settings.image_url != blank %}
          <img src="{{ section.settings.image_url }}" alt="{{ section.settings.image_alt | escape }}">
        {% endif %}
      </div>
    </div>
  </div>
</section>

